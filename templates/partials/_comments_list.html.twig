{% for com in post.comments %}
    <div class="card border border-primary p-2 m-4">
        <p>
            <a href="{{ path('profil_show', {id: com.user.id}) }}">
                <strong>{{ com.user.firstname }} {{ com.user.lastname }}</strong>
            </a>
             à répondu le {{ com.createdAt |date('d/m/Y')}}:
        </p>
        <p> --  {{ com.content }}</p>
    </div>
{% endfor %}