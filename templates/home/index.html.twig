{% extends 'base.html.twig' %}


{% block title %}Fil d'actualit√©{% endblock %}

{% block body %}
<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                {{ form(post_publish_form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            {% for post in posts %}
                <div class="card mb-4">
                    <div class="card-body">
                        <a href="{{ path('profil_show', {id: post.user.id}) }}">
                            <strong>{{ post.user.firstname }} {{ post.user.lastname }}</strong>
                        </a>
                        <small>{{ post.publishedAt |date('d/m/Y') }}</small>
                        <p>{{ post.content }}</p>
                        
                        {% include 'partials/_comments_list.html.twig' %}
                        
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="#" class="btn btn-secondary">Commenter</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
